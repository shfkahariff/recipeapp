
<%= simple_form_for(@leave_balance) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :leavetype %>
    <%= f.input :balance %>
    <%= f.label :user_id, "Employee", class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= f.input :user_id, collection: User.all, label_method: :name, value_method: :id, prompt: "Select Employee", label: false, input_html: { class: 'form-control' } %>
          </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
