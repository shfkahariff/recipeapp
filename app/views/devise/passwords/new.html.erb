<section class="mt-20">
  <div class="h-full">
    <!-- Left column container with background-->
    <div
      class="g-6 flex h-full flex-wrap items-center justify-center lg:justify-between">
      <div
        class="shrink-1 mb-12 grow-0 basis-auto md:mb-0 md:w-9/12 md:shrink-0 lg:w-6/12 xl:w-6/12">
        <img
          src="https://tecdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="w-full"
          alt="Sample image" />
      </div>

      <!-- Right column container -->
      <div class="mb-12 md:mb-0 md:w-8/12 lg:w-5/12 xl:w-5/12">
        <h1 class="text-2xl font-bold text-center">Forgot your password?</h1>
        <br/><br/>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="mb-4">
            <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= f.input_field :email,
                        required: true,
                        autofocus: true,
                        class: "input input-bordered mt-1 block w-full",
                        autocomplete: "email" %>
          </div>

          <div class="form-actions flex justify-center items-center p-3 border-t border-gray-200 rounded-b dark:border-gray-700">
            <%= f.button :submit, "Send me reset password instructions", class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-600 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>