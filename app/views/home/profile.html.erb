<%= form_for(@user, as: @user, url: home_profile_path(@user)) do |f| %>
<div class="grid grid-cols-1 px-4 pt-6 xl:grid-cols-3 xl:gap-4 dark:bg-gray-900">
    <div class="mb-4 col-span-full xl:mb-2">
        <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">User settings</h1>
    </div>

    <!-- Right Content -->
    <div class="col-span-full xl:col-auto">
        <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <div class="items-center sm:flex xl:block 2xl:flex sm:space-x-4 xl:space-x-0 2xl:space-x-4">
                <% if @user.profile_pic.present? %>
                    <%= image_tag @user.profile_pic.url, class: "mb-4 rounded-lg w-28 h-28 sm:mb-0 xl:mb-4 2xl:mb-0", alt: "Profile Picture" %>
                <% else %>
                    <%= image_tag "default-profile-icon-3.jpg", class:"mb-4 rounded-lg w-28 h-28 sm:mb-0 xl:mb-4 2xl:mb-0", alt: "Profile Picture" %>
                <% end %>
                <div>
                    <h3 class="mb-1 text-xl font-bold text-gray-900 dark:text-white">Profile picture</h3>
                    <div class="mb-4 text-sm text-gray-500 dark:text-gray-400">
                        JPG, GIF or PNG. Max size of 800K
                    </div>
                    <div class="flex items-center space-x-4">
                        <button type="button" class="btn-disabled py-2 px-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            Upload picture
                        </button>
                        <button type="button" class="btn-disabled py-2 px-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <h3 class="mb-4 text-xl font-semibold dark:text-white">Leave Type Information</h3>
            <div class="mb-4">
                <table class="table border table-zebra">
                    <thead class="bg-base-200">
                        <tr>
                            <th>Leave Type</th>
                            <th>Balance</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @user.leave_balances.each do |leave_balance| %>
                            <tr>
                            <td><%= leave_balance.leavetype %></td>
                            <td><%= leave_balance.balance %> Days</td>
                            </tr>
                        <% end %>
                        </tbody>
                </table>
            </div>

        </div>
    </div>

    <div class="col-span-2">
        <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
            <h3 class="mb-4 text-xl font-semibold dark:text-white">General information</h3>
            <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6">
                    <%= f.label :public_id, 'Employee ID', class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
                    <%= f.text_field :public_id, required: true, placeholder: 'EMP006', class: 'input input-bordered w-full dark:bg-gray-300 bg-gray-100', readonly: true %>
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <%= f.label :name, 'Full Name', class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
                    <%= f.text_field :name, required: true, placeholder: 'John Doe', class: 'input input-bordered w-full dark:bg-gray-300 bg-gray-100', readonly: true %>
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <%= f.label :email, 'Email', class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
                    <%= f.text_field :email, required: true, placeholder: 'example@company.com', class: 'input input-bordered w-full dark:bg-gray-300 bg-gray-100', readonly: true %>
                </div>
                <div class="col-span-6">
                    <%= f.label :address, 'Address', class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
                    <%= f.text_area :address, style: "resize: none;", rows: "2", placeholder: '123 Main St, City', class: 'textarea textarea-bordered w-full dark:bg-gray-300 bg-gray-100', readonly: true %>
                </div>

                <div class="col-span-6 sm:col-span-3">
                <%= f.label :phoneno, 'Phone Number', class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
                <%= f.text_field :phoneno, placeholder: '+1234567890', class: 'input input-bordered w-full dark:bg-gray-300 bg-gray-100', readonly: true %>
                </div>

                <div class="col-span-6 sm:col-span-3">
                    <%= f.label :position, 'Position', class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
                    <%= f.text_field :position, placeholder: 'e.g., Ruby on Rails Developer', class: 'input input-bordered w-full dark:bg-gray-300 bg-gray-100', readonly: true %>
                </div>
            
            </div>
            <br/>
            <div class="col-span-6 sm:col-full text-right">
                <%= link_to 'Edit Profile', edit_user_registration_path, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-600 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900" %>
            </div>
        </div>

    </div>
</div
<% end %>